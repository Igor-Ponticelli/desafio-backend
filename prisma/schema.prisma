generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"

}
model Usuario {
  id    Int    @id @default(autoincrement())
  email String @unique
  senha String
}

model Cobranca {
  id          Int      @id @default(autoincrement())
  cliente     Cliente  @relation(fields: [clienteId], references: [id])
  clienteId   Int
  valor       Float
  status      String
  metodoEnvio String
  criadaEm    DateTime @default(now())
}

model Cliente {
  id        Int        @id @default(autoincrement())
  nome      String
  cpf       String
  cobrancas Cobranca[]
}

